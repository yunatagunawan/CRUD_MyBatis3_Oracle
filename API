-- Basic CRUD
/api/employees

# Insert new employee
curl -X POST http://localhost:8080/api/employees -H "Content-Type: application/json" -d '{"id": 3,"name": "John Doe", "department": "Data Management"}'
curl -X POST http://localhost:8080/api/employees -H "Content-Type: application/json" -d "{'id': 3,'name': 'John Doe', 'department': 'Data Management'}"
curl -X POST http://localhost:8080/api/employees -H "Content-Type: application/json" -d "{\'id\': 3,\'name\': \'John Doe\', \'department\': \'Data Management\'}"

# v0.4 (working, If ID is not auto Increment)
curl -X POST http://localhost:8080/api/employees -H "Content-Type: application/json" -d "{\"id\": 3, \"name\": \"John Doe\", \"department\": \"Data Management\"}"
# v0.4 (working, If ID is auto Increment)
curl -X POST http://localhost:8080/api/employees -H "Content-Type: application/json" -d "{\"name\": \"John Doe\", \"department\": \"Data Management\"}"


# Get all employees
curl -X GET http://localhost:8080/api/employees

# Get employee by id
curl -X GET http://localhost:8080/api/employees/1

# Update employee by id
curl -X PUT http://localhost:8080/api/employees \
     -H "Content-Type: application/json" \
     -d '{"id":1,"name":"John Updated","department":"IT"}'

# v0.4 (working)
curl -X PUT http://localhost:8080/api/employees -H "Content-Type: application/json" -d "{\"id\":1,\"name\":\"Silva Luren\",\"department\":\"IT\"}"

# Delete employee by id
curl -X DELETE http://localhost:8080/api/employees/1

curl -X DELETE http://localhost:8080/api/employees/1

# Find employee by name
curl -X GET http://localhost:8080/api/employees/search?name=John%20Doe
